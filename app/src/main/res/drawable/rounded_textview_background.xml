<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the TextView -->
    <solid android:color="#FFFFFF" /> <!-- Example: Light gray background -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />
    <!-- Or specify individual corners:
    <corners
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />
    -->

    <!-- Optional: Padding inside the shape, around the text -->
    <!-- This padding is part of the background drawable itself -->
    <padding
        android:left="10dp"
        android:top="5dp"
        android:right="10dp"
        android:bottom="5dp" />

    <!-- Optional: Border -->
    <!--
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" />
    -->
</shape>

